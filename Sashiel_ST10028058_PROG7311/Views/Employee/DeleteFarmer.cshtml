@model Sashiel_ST10028058_PROG7311.Models.Farmer
@{
    ViewData["Title"] = "Delete Farmer";
}

<h2>Delete Farmer</h2>

<div class="card p-4 shadow-sm">
    <h5>Are you sure you want to delete this farmer?</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <form asp-action="DeleteFarmer" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="ViewFarmers" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
