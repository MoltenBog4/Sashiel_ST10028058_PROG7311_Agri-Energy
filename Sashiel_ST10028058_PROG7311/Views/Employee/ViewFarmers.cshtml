@model IEnumerable<Sashiel_ST10028058_PROG7311.Models.Farmer>
@{
    ViewData["Title"] = "All Farmers";
}

<div class="container mt-4">
    <h2 class="mb-3">Registered Farmers</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>@farmer.Name</td>
                    <td>@farmer.Email</td>
                    <td>
                        <a asp-action="EditFarmer" asp-route-id="@farmer.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteFarmer" asp-route-id="@farmer.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="ViewFarmerProducts" asp-route-id="@farmer.Id" class="btn btn-sm btn-outline-primary">
                            View Products
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
