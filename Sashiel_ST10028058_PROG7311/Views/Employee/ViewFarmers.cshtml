@model IEnumerable<Sashiel_ST10028058_PROG7311.Models.Farmer>
@{
    ViewData["Title"] = "All Farmers";
}

<h2>Registered Farmers</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Email</td>
            </tr>
        }
    </tbody>
</table>
