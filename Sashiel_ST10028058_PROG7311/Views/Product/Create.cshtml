@model Sashiel_ST10028058_PROG7311.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<h2 class="text-center mb-4">Add New Product</h2>

<p class="text-center text-muted mb-4">
    Fill in the form below to add a new product. Include the product type, production date, and optionally upload an image.
</p>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Product Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Carrots, Wheat" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Product Type</label>
                            <input asp-for="Type" class="form-control" placeholder="e.g. Vegetables, Grains" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductionDate" class="form-label">Production Date</label>
                            <input asp-for="ProductionDate" type="date" class="form-control" />
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Product Image</label>
                            <input type="file" name="ImageFile" class="form-control" />
                            <small class="text-muted">Optional: Upload a product image (JPG, PNG).</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Save Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
