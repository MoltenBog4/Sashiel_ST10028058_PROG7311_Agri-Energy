@model IEnumerable<Sashiel_ST10028058_PROG7311.Models.Product>
@{
    ViewData["Title"] = "My Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">My Products</h2>
        <a asp-action="Create" class="btn btn-success">Add New Product</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">You haven't added any products yet.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img src="@product.ImagePath" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover;" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">
                                <strong>Type:</strong> @product.Type<br />
                                <strong>Date:</strong> @product.ProductionDate.ToShortDateString()
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
